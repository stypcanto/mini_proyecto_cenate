      "item": [
        {
          "name": "Login de usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"scantor\",\n  \"password\": \"admin123\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "  pm.environment.set('jwt_token', jsonData.token);",
                  "  console.log('\u2705 JWT guardado autom\u00e1ticamente');",
                  "} else {",
                  "  console.log('\u26a0\ufe0f No se encontr\u00f3 token en la respuesta');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
