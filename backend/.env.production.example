# ============================================
# CONFIGURACIÓN DE ENTORNO - PRODUCCIÓN
# ============================================

# Base de Datos
SPRING_DATASOURCE_URL=jdbc:postgresql://10.0.89.13:5432/maestro_cenate
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=TU_CONTRASEÑA_SEGURA_AQUI

# JWT Configuration (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET_KEY=GENERAR_UNA_CLAVE_SECRETA_SEGURA_AQUI_BASE64
JWT_EXPIRATION=3600000

# Server Configuration
SERVER_PORT=8080
SERVER_ADDRESS=0.0.0.0

# CORS Allowed Origins (URLs de producción)
CORS_ALLOWED_ORIGINS=https://cenate.essalud.gob.pe,https://www.cenate.essalud.gob.pe

# Logging Level (menos verbose en producción)
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=INFO

# Application Name
SPRING_APPLICATION_NAME=cenate-api

# SSL Configuration (si aplica)
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=classpath:keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=TU_CONTRASEÑA_KEYSTORE
SERVER_SSL_KEY_STORE_TYPE=PKCS12
SERVER_SSL_KEY_ALIAS=tomcat

# ============================================
# IMPORTANTE: SEGURIDAD EN PRODUCCIÓN
# ============================================
# 1. Cambiar JWT_SECRET_KEY por una clave segura generada
# 2. Usar contraseñas fuertes para la base de datos
# 3. Configurar HTTPS/SSL
# 4. Limitar CORS_ALLOWED_ORIGINS solo a dominios conocidos
# 5. Configurar firewall para limitar acceso a la base de datos
# 6. Habilitar rate limiting
# 7. Configurar logging apropiado
# 8. Backup automático de base de datos
