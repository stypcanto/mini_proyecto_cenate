            </div>

            {/* Paginaci√≥n */}
            {!loading && totalPages > 0 && (
                <div className="px-6 py-4 border-t border-gray-100 bg-gray-50">
                    <PaginationControls
                        currentPage={currentPage}
                        totalPages={totalPages}
                        totalElements={totalElements}
                        pageSize={pageSize}
                        onPageChange={handlePageChange}
                        loading={loading}
                    />
